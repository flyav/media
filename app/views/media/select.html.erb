<%- model_class = Medium -%>
<div class="page-header">
  <h1>Select Media to Add</h1>
</div>

<%= form_for @medium, :url => { :action => 'new' } do |f| %>
  <div class="control-group">
    <%= f.label :title, :class => 'control-label' %>
    <div class="controls">
      <%= f.select(:rotten_id, @selections, :class => 'text_field') %>
    </div>
  </div>
   <div class="form-actions">
      <%= f.submit "Populate", :class => 'btn btn-primary' %>
	  <%= link_to("Not Found", {:action => 'new', :title => @medium.title}, :class => 'btn') %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                  media_path, :class => 'btn' %>
    </div>
<% end %>